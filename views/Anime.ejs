<%- include("partials/header") %>
	<div class="container">
		<div class="row mt-2">
			<% anime.forEach((anime) =>{ %>
				<div class ="card m-3">
					<a href="/anime/<%= anime._id %>">
				<img class ="card-img card-img-top" src="<%= anime.image %>" alt="Picture of the Anime">
					</a>
					<h3 class="card-title mt-3"><%=anime.title %></h3>
 				<p class="card-text mb-3 mx-3"><%= anime.description %></p>
			</div>
			<% }) %>
		</div>
</div>
<%- include("partials/footer") %>
