<%- include("partials/header") %>

<div class="container">
	<h1>Add New Anime</h1>
	<form action="/anime" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" placeholder="Ex. Dragon Ball Super" autofocus>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description">
  </div>
		 <div class="form-group">
    <label for="creator">Creator</label>
    <input type="text" class="form-control" name="creator" placeholder="Ex. DragonBall">
  </div>
		 <div class="form-group">
    <label for="studio">Studio</label>
    <input type="text" class="form-control" name="studio" placeholder="Ex. Toei Animation">
  </div>
		 <div class="form-group">
    <label for="date">Release Date</label>
    <input type="text" class="form-control" name="date">
  </div>
		<div class="form-group">
    <label for="source">Source</label>
    <input type="text" class="form-control" name="source" placeholder="Ex. Manga">
  </div>
		<div class="form-group">
    <label for="episodes">Number of Episodes</label>
    <input type="number" class="form-control" name="episodes">
  </div>
		<div class="form-group">
    <label for="genre">Genre</label>
   <select class="form-control" id="genre" name="genre">
	   <option disabled selected>-- Choose Below --</option>
	   <option>Action</option>
	   <option>Slice of Life</option>
	   <option>Sports</option>
	   <option>Comedy</option>
	   <option>Horror</option>
	   <option>Thriller</option>
	   <option>Fantasy</option>
	   <option>Sci-Fi</option>
       <option>Magic</option>
	</select>
  </div>
		<div class="form-group">
	<label for="age_restriction">Rating 17+?</label>   
	<input type="checkbox" name="age_restriction">		
     
  </div>
   <div class="form-group">
    <label for="img">Link to Image</label>
    <input type="text" class="form-control" name="img" placeholder="https://myimage.com">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
	</div>


<%- include("partials/footer") %>