<%- include("partials/header") %>

<div class="container">
	<h1>Edit Anime</h1>
	<form action="/anime/<%=anime._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" name="title" value="<%=anime.title %>">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="description" value="<%=anime.description %>">
  </div>
		 <div class="form-group">
    <label for="creator">Creator</label>
    <input type="text" class="form-control" name="creator" value="<%=anime.creator %>">
  </div>
		 <div class="form-group">
    <label for="studio">Studio</label>
    <input type="text" class="form-control" name="studio" value="<%=anime.studio %>">
  </div>
		 <div class="form-group">
    <label for="date">Release Date</label>
    <input type="text" class="form-control" name="date" value="<%=anime.date %>" id="datepicker">
  </div>
		<div class="form-group">
    <label for="source">Source</label>
    <input type="text" class="form-control" name="source" value="<%=anime.source %>">
  </div>
		<div class="form-group">
    <label for="episodes">Number of Episodes</label>
    <input type="number" class="form-control" name="episodes" value="<%=anime.episodes %>">
  </div>
		<div class="form-group">
    <label for="genre">Genre</label>
   <select class="form-control" id="genre" name="genre">
	   <option disabled>-- Choose Below --</option>
	   <option <%= anime.genre === "action" ? "selected" : "" %>>Action</option>
	   <option <%= anime.genre === "slice of life" ? "selected" : "" %>>Slice of Life</option>
	   <option <%= anime.genre === "sports" ? "selected" : "" %>>Sports</option>
	   <option <%= anime.genre === "comedy" ? "selected" : "" %>>Comedy</option>
	   <option <%= anime.genre === "horror" ? "selected" : "" %>>Horror</option>
	   <option <%= anime.genre === "thriller" ? "selected" : "" %>>Thriller</option>
	   <option <%= anime.genre === "fantasy" ? "selected" : "" %>>Fantasy</option>
	   <option <%= anime.genre === "sci-fi" ? "selected" : "" %>>Sci-Fi</option>
       <option <%= anime.genre === "magic" ? "selected" : "" %>>Magic</option>
	</select>
  </div>
		<div class="form-group">
	<label for="age_restriction">Rating 17+?</label>   
	<input type="checkbox" name="age_restriction" <%= anime.age_restriction ? "checked" : "" %>>		
     
  </div>
   <div class="form-group">
    <label for="img">Link to Image</label>
    <input type="text" class="form-control" name="img" value="<%=anime.image %>">
  </div>
  <button type="submit" class="btn btn-primary">Edit</button>
</form>
	</div>


<%- include("partials/footer") %>